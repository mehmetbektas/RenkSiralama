<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:background="@drawable/rainbow"
	android:orientation="horizontal" >

<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="100dp"
	android:orientation="horizontal" >
</LinearLayout>
	
<RadioGroup
    	android:id="@+id/rgAlgoritma"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

    	<RadioButton
    		android:id="@+id/median"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:checked="true"
    		android:text="Median Cut Algoritması"
    		android:textSize="30dp"
    		android:textStyle="bold" />

<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="10dp"
	android:orientation="horizontal" >
</LinearLayout>
    	
    	<RadioButton
    		android:id="@+id/scalar"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:checked="false"
    		android:text="Scalar Quantization Algoritması"
    		android:textAlignment="inherit"
    		android:textSize="30dp"
    		android:textStyle="bold" />

    </RadioGroup>
<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="50dp"
	android:orientation="horizontal" >
</LinearLayout>

<Button
	android:id="@+id/btnAlgoritmaSec"
	android:layout_width="wrap_content"
	android:layout_height="60dp"
	android:text="Renkleri Bul"
	android:textSize="30dp"
	android:visibility="visible" />

<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
</LinearLayout>

</TableLayout>